---
const links = [
  { href: '/', text: 'List Pokemons' },
  { href: '/pokemons/1', text: 'List With Pagination' },
  { href: '/favorites', text: 'Favorites' },
  { href: '/islands', text: 'Islands' },
];

const  currentPath = Astro.url.pathname;

---


<nav class="shadow bg-slate-800">
    <div class="container flex items-center justify-center p-6 mx-auto text-gray-600 capitalize dark:text-gray-300">
    
        
        {
            links.map(({href,text}) => (
                <div>
                <a href={href} class="ftext-gray-800 dark:text-gray-200  mx-1.5 sm:mx-6">{text}</a>
                {
                    currentPath === href  ? (
                        <div
                        transition:name="menu-line"
                        class="border-b-2 border-blue-500 mx-4"
                        >
                        </div>
                    ): (
                        <div class="border-b-2 border-transparent">

                        </div>
                    )
                }

                </div>
    ))
}
<div>

</div>

</nav>
